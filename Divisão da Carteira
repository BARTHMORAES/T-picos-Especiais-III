colors = ["#545454","#737373","#a6a6a6","#7CFC00","#00bf63","#7ed957", "limegreen"]
fig, ax = plt.subplots(figsize=(12,5))

explode = (0.1, 0)

ax.pie(vals, labels=labels, autopct="%.1f",shadow=True, startangle=60, colors=colors)
ax.set_title("Divisão da Carteira", fontsize=18)
plt.show()
